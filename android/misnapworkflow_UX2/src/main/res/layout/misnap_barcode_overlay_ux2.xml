<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/imageOverlay"
            android:layout_width="360dp"
            android:layout_height="187dp"
            android:scaleType="fitXY"
            android:src="@drawable/misnap_ghost_barcode_ux2"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            style="@style/MiSnapWorkflowShadowTheme"
            android:id="@+id/misnap_barcode_tooltip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:text="@string/misnap_ghost_barcode_tooltip_ux2"
            android:textColor="#9e9e9e"
            android:textSize="20dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/misnap_overlay_mitek_logo"
            android:visibility="gone"
            android:layout_width="130dp"
            android:layout_height="27dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="73dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/misnap_powered_by_mitek_ux2"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewport_border">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".10"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_outer_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".10"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_inner_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".35"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".90"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_inner_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".65"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_outer_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".90"/>

            <View
                android:id="@+id/viewport_border_panel_left"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideline_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:alpha="0.5"/>

            <View
                android:id="@+id/viewport_border_panel_right"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/guideline_right"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:alpha="0.5"/>

            <View
                android:id="@+id/viewport_border_panel_top"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/guideline_left"
                app:layout_constraintRight_toLeftOf="@id/guideline_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guideline_outer_top"
                android:alpha="0.5"/>

            <View
                android:id="@+id/viewport_border_panel_bottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/guideline_left"
                app:layout_constraintRight_toLeftOf="@id/guideline_right"
                app:layout_constraintTop_toBottomOf="@id/guideline_outer_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                android:alpha="0.5"/>

<!--            <View-->
<!--                android:id="@+id/misnap_barcode_rectangle"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="0dp"-->
<!--                android:visibility="invisible"-->
<!--                app:layout_constraintLeft_toRightOf="@id/guideline_left"-->
<!--                app:layout_constraintTop_toBottomOf="@id/guideline_outer_top"-->
<!--                app:layout_constraintRight_toLeftOf="@id/guideline_right"-->
<!--                app:layout_constraintBottom_toTopOf="@id/guideline_outer_bottom"-->
<!--                android:background="@drawable/misnap_barcode_viewport"/>-->

<!--            <ImageView-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                android:id="@+id/misnap_barcode_rectangle"-->
<!--                android:scaleType="fitCenter"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="0dp" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        <ImageButton-->
<!--            android:id="@+id/flashButton"-->
<!--            android:layout_width="64dp"-->
<!--            android:layout_height="64dp"-->
<!--            android:layout_marginLeft="4dp"-->
<!--            android:layout_marginTop="4dp"-->
<!--            android:background="#00000000"-->
<!--            android:scaleType="fitXY"-->
<!--            android:src="@drawable/misnap_barcode_flashbuttonoff_ux2"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/driverLicenseBackConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" >

        <View
            app:layout_constraintTop_toBottomOf="@+id/topBarConstraintLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/topGhostView"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/bottomGhostView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.2"
            android:id="@+id/leftGhostView"
            android:visibility="gone"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:visibility="visible"/>

        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.2"
            android:id="@+id/rightGhostView"
            android:visibility="gone"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:visibility="visible"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/backConstraintLayout"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/leftGhostView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/landscapeBackImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:foreground="?android:attr/actionBarItemBackground"
                android:src="@drawable/ic_left_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/helpConstraintLayout"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="@+id/rightGhostView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" >

            <ImageButton
                android:id="@+id/flashLandscapeButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/misnap_barcode_flashbuttonoff_ux2"
                app:layout_constraintDimensionRatio="wh, 1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/frontCaptureHintTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_brownpro"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1"
            android:text="@string/driver_license_back_hint"
            android:textColor="@color/misnap_new_black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/topGhostView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBarConstraintLayout" />

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/misnap_barcode_rectangle"
            android:id="@+id/misnap_overlay_help_button"
            android:visibility="gone"
            android:text="@string/driver_license_help"
            android:textSize="16sp"
            android:paddingBottom="20dp"
            android:layout_marginStart="68dp"
            android:layout_marginEnd="68dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/font_brownpro"
            android:textColor="@color/misnap_new_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/misnap_barcode_rectangle"
            android:id="@+id/topGhostView"
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="wh, 1:1"
            android:src="@drawable/ghost_id_card_portrait"
            android:id="@+id/misnap_barcode_rectangle"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/misnap_barcode_rectangle"
            android:id="@+id/bottomGhostView"
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBarConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="wh, 1:1"
                android:id="@+id/backImageView"
                android:src="@drawable/ic_left_back"
                android:layout_marginStart="15dp"
                android:foreground="?android:attr/actionBarItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/driver_license_back"
                android:textSize="18sp"
                android:fontFamily="@font/font_brownpro_bold"
                android:textColor="@color/misnap_new_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/topBarHelpTextView"
                android:visibility="gone"
                android:text="@string/driver_license_help"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/font_brownpro"
                android:textColor="@color/misnap_new_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/flashButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/misnap_barcode_flashbuttonoff_ux2"
                app:layout_constraintDimensionRatio="wh, 1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/misnap_new_gray"
                android:layout_width="0dp"
                android:layout_height="1px" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>