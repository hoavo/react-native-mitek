<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:keepScreenOn="true"
    android:fillViewport="true"
    android:id="@+id/layout_misnap_your_camera_overlay_ux2">

<!-- MiSnapCameraVignetteImageEnabled:
         To display the vignette, uncomment this ImageView,
         and uncomment lines in CameraOverlay:setupButtons()-->
    <ImageView
        android:id="@+id/misnap_vignette"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/misnap_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/misnap_en_android_menu_top_ux2"
        android:alpha=".7"
        android:orientation="horizontal">
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/driverLicenseFrontConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBarConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/backImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:foreground="?android:attr/actionBarItemBackground"
                android:src="@drawable/ic_left_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="wh, 1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_brownpro_bold"
                android:text="@string/driver_license_front"
                android:textColor="@color/misnap_new_black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/topBarHelpTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_brownpro"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/driver_license_help"
                android:textColor="@color/misnap_new_blue"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:background="@color/misnap_new_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            app:layout_constraintTop_toBottomOf="@+id/topBarConstraintLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/topGhostView"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <View
            app:layout_constraintTop_toBottomOf="@+id/bottomGhostView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/frontCaptureHintTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_brownpro"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1"
            android:text="@string/driver_license_front_hint"
            android:textColor="@color/misnap_new_black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/topGhostView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBarConstraintLayout" />

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/misnap_ghost_image"
            android:id="@+id/topGhostView"
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="wh, 1:1"
            android:src="@drawable/ghost_id_card_portrait"
            android:id="@+id/misnap_ghost_image"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/misnap_ghost_image"
            android:id="@+id/bottomGhostView"
            android:layout_width="0dp"
            android:layout_height="15dp" />

        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.2"
            android:id="@+id/leftGhostView"
            android:visibility="gone"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:visibility="visible"/>

        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.2"
            android:id="@+id/rightGhostView"
            android:visibility="gone"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:visibility="visible"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/backConstraintLayout"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/leftGhostView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/landscapeBackImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:foreground="?android:attr/actionBarItemBackground"
                android:src="@drawable/ic_left_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/helpConstraintLayout"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintStart_toStartOf="@+id/rightGhostView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/landscapeHelpTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_brownpro"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/driver_license_help"
                android:textColor="@color/misnap_new_blue"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottomGhostView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/misnap_overlay_capture_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:background="#00000000"
            android:src="@drawable/ic_camera_button"
            android:contentDescription="@string/misnap_overlay_capture_ux2"
            android:scaleType="fitXY" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/misnap_bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/misnap_en_android_menu_bottom_ux2"
        android:layout_alignParentBottom="true"
        android:alpha=".7"
        android:orientation="horizontal">
    </LinearLayout>

    <Button
        android:id="@+id/overlay_flash_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"
        android:contentDescription="@string/misnap_overlay_flash_off_ux2"
        android:background="#00000000"
        android:fontFamily="@font/font_brownpro"
        android:scaleType="fitXY"/>


    <!--<ImageButton-->
        <!--android:id="@+id/overlay_flash_toggle"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:contentDescription="@string/misnap_overlay_flash_off_ux2"-->
        <!--android:background="#00000000"-->
        <!--android:scaleType="fitXY"/>-->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:contentDescription="@string/misnap_overlay_help_ux2"
        android:visibility="gone"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/misnap_overlay_gauge"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="@null" />

    <!--<ImageButton
        android:id="@+id/overlay_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:contentDescription="@string/overlay_cancel"
        android:scaleType="fitXY"/>-->

    <com.miteksystems.misnap.misnapworkflow_UX2.ui.AutoResizeTextView
        android:id="@+id/misnap_ghost_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/misnapworkflow_ghost_padding_ux2"
        android:paddingRight="@dimen/misnapworkflow_ghost_padding_ux2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:fontFamily="@font/font_brownpro"
        style="@style/MisnapGhostTextOverlayTheme"
        />

    <LinearLayout
        android:id="@+id/misnap_bug_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/misnapworkflow_bug_margin_horizontal_ux2"
        android:layout_marginLeft="@dimen/misnapworkflow_bug_margin_horizontal_ux2"
        android:layout_marginEnd="@dimen/misnapworkflow_bug_margin_horizontal_ux2"
        android:layout_marginRight="@dimen/misnapworkflow_bug_margin_horizontal_ux2"
        android:background="@drawable/misnap_bug_message_background_ux2"
        android:orientation="horizontal"
        android:paddingStart="@dimen/misnapworkflow_bug_padding_horizontal_ux2"
        android:paddingLeft="@dimen/misnapworkflow_bug_padding_horizontal_ux2"
        android:paddingTop="@dimen/misnapworkflow_bug_padding_vertical_ux2"
        android:paddingEnd="@dimen/misnapworkflow_bug_padding_horizontal_ux2"
        android:paddingRight="@dimen/misnapworkflow_bug_padding_horizontal_ux2"
        android:paddingBottom="@dimen/misnapworkflow_bug_padding_vertical_ux2"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/misnap_bug"
            android:layout_width="129dp"
            android:layout_height="150dp"
            android:contentDescription="@null"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/misnap_bug_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:layout_gravity="center_vertical"
            android:text="@string/misnap_bug_message_ux2"
            android:textColor="@color/misnap_black_ux2"
            android:textSize="@dimen/misnapworkflow_bug_text_size_ux2"
            android:fontFamily="@font/font_brownpro"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/misnap_check_text_ux2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha=".3"/>

    <TextView
        android:id="@+id/misnap_overlay_test_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#7F7F7F7F"
        android:maxLength="256"
        android:fontFamily="@font/font_brownpro"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/misnap_overlay_mitek_logo"
        android:layout_width="130dp"
        android:layout_height="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="73dp"
        android:layout_marginEnd="73dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:contentDescription="@null"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/misnap_balloon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/misnap_error_message_background_ux2"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:textSize="28sp"
        android:fontFamily="@font/font_brownpro"
        android:textColor="@color/misnap_black_ux2"
        android:contentDescription="@null" />

</RelativeLayout>